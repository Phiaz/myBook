<form name="delete-form" method="POST">


<script>
  document.addEventListener('DOMContentLoaded', function() {
    var idValue;
    var deleteForms = document.forms['delete-form']
    var btnDeleteCourse = document.getElementById('btn-delete')
    // Lấy checkbox tất cả
    var checkboxAll = $('#checkbox-all')
    // Lấy 5 checkbox bằng Jquery
    var bookItemCheckbox = $('input[name="bookIds[]"]')
    //Lấy nút submit
    var checkAllSubmitBtn = $('.check-all-submit-btn')
    //Lấy form tổng
    var containerForm = document.forms['container-form']
    $('#delete-book-modal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget)  //Button that triggered the modal

      idValue = button.data('id');
    });

    btnDeleteCourse.onclick = function(){ 
      deleteForms.action = '/books/' + idValue +'?_method=DELETE';
      deleteForms.submit();
    }

    //Config check all
    checkboxAll.change(function () {
      var isCheckedAll = $(this).prop('checked')
      
      {{!-- if(isCheckedAll) {
        bookItemCheckbox.prop('checked',true)
      } else {
        bookItemCheckbox.prop('checked',false)
      } --}} // Đoạn này có thể được viết như bên dưới
      bookItemCheckbox.prop('checked',isCheckedAll)
      renderCheckAllSubmitBtn()
    })

    //Book item checkbox changed - biến isCheckedAll này nằm trong 1 function khác, do tính chất scope nên sẽ là 1 biến mới so với isCheckedAll bên trên
    bookItemCheckbox.change(function () {
      var isCheckedAll = bookItemCheckbox.length === $('input[name="bookIds[]"]:checked').length
      checkboxAll.prop('checked', isCheckedAll)
      renderCheckAllSubmitBtn()
    })
    
    // Re-render submit all btn
    function renderCheckAllSubmitBtn() {
      var checkedCount = $('input[name="bookIds[]"]:checked').length
      if (checkedCount > 0) {
        checkAllSubmitBtn.attr('disabled', false)
      } else {
        checkAllSubmitBtn.attr('disabled',true)
      }
    }

    // Check all submit button clicked 
    checkAllSubmitBtn.click('submit', function(e) { 
      var isSubmittable = !$(this).hasClass('disabled');
      if(!isSubmittable) {
        e.preventDefault();
      }
    })
  });
</script>